{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset("../css/form.css")}}">
{% endblock %}

{% block javascripts %}
{% endblock %}


{% block title %}Prendre rendez-vous{% endblock %}

{% block body %}
    {% include 'composants/header.html.twig' %}

    <div class="d-flex justify-content-center">
        <form action="{{ path('applyCreateMeeting') }}" method="POST" class="w-75 d-flex flex-column">
            <div class="form-group">
                <label for="date" class="h3 ml-4 mb-0">Date et heure de d√©but :</label>
                <input type="text" class="form-control" id="date"  name="date" value="{{date|date('Y-m-d H:i:s')}}" readonly>
            </div>
            <div class="form-group">
                <label for="lastName" class="h3 ml-4 mb-0">Docteur :</label>
                <select class="form-control" id="lastName" name="lastName" required>
                    {% for doctor in doctors %}
                        <option value={{ doctor.last_name }}>{{ doctor.last_name }} {{ doctor.first_name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="mt-4 d-flex justify-content-center w-100">
                <div class="w-75 d-flex justify-content-center">
                    <input type="submit" class="btn btn-primary w-100" value="Demander">
                </div>
            </div>
        </form>
    </div>

{% endblock %}
